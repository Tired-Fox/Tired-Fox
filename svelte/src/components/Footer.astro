---
import { Icon } from "astro-icon";
---

<div class="mb-auto"></div>
<footer>
  <div id="links">
    <div>
      <h4>Contact Me</h4>

      <div>
        <a href="mailto:zboehm104@gmail.com" title="Email">
          <Icon name="envelope" />
        </a>
        <a href="#" title="LinkedIn">
          <Icon name="linkedin" />
        </a>
      </div>
    </div>
    <div>
      <h4>Socials</h4>
      <div>
        <a href="https://github.com/Tired-Fox" title="Github">
          <Icon name="github" />
        </a>
        <a href="#" title="Threads">
          <Icon name="threads" />
        </a>
      </div>
    </div>
    <div>
      <h4>Other</h4>
      <div>
        <a href="https://github.com/Tired-Fox" title="Game jams">
          <Icon name="jar" />
        </a>

        <a
          href="https://totally-not-a-bunch-of-cats.github.io/Totally-Not-a-Bunch-of-Cats/"
          title="My game development team"
        >
          <Icon name="cat" />
        </a>
      </div>
    </div>
  </div>
  <div id="info">
    <span>&copy; 2023 Zachary Boehm. All Rights Reserved.</span>
  </div>
  <style lang="scss">
    footer {
      width: 100%;
      height: fit-content;
      border: 1px dashed rgb(var(--text));
      padding: 1rem;
      margin-top: 1.2rem;

      & #info {
        margin-top: 2rem;
        text-align: center;
      }

      & #links {
        display: flex;
        flex-wrap: wrap;
        gap: 3rem;
        margin-top: 1rem;
        width: fit-content;
        margin-inline: auto;

        & a {
          color: rgb(var(--text));
          &:hover {
            color: rgb(var(--color-blue));
          }
        }

        & > div {
          display: flex;
          flex-direction: column;
          width: fit-content;
          gap: 0.2rem;

          & > h4 {
            margin: 0;
          }
          & > p {
            text-indent: 0;
            margin: 0;
          }
          & > div {
            display: flex;
            width: 100%;
            justify-content: center;
            margin-top: 0.5rem;
            gap: 0.75rem;
          }
        }
      }

      a {
        text-decoration: none;
      }

      svg {
        width: 1.25rem;
        height: 1.25rem;
      }
    }

    #contact-me {
      position: relative;
      width: 100%;
      padding: 1rem;
      padding-top: 3rem;
      border: 1px solid rgb(var(--text));
      margin-top: 2rem;

      & > h1 {
        position: absolute;
        padding: 1rem;
        top: -3rem;
        left: 1rem;
        background-color: rgb(var(--background));
        border: 1px solid rgb(var(--text));
      }
    }
  </style>
</footer>
