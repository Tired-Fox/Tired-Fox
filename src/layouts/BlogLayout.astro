---
import type { CollectionEntry } from 'astro:content';
import Layout from '@layout/Layout.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, tags, image, related } = Astro.props;
---

<Layout title={title} description="Blog post">
    <article class="prose prose-zinc dark:prose-invert rounded mx-auto my-4 p-4">
        <slot />
    </article>
</Layout>